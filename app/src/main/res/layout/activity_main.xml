<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rex_wang.navigationapplication.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02DF82"
        android:minHeight="?attr/actionBarSize" />


    <ImageView
        android:id="@+id/img_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_main"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:scaleType="fitStart" />

    <Button
        android:id="@+id/btn_activity_list"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_location_information"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonshape"
        android:text="活動列表"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_location_information"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lv_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonshape"
        android:text="進入導覽"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <com.facebook.share.widget.LikeView
        android:id="@+id/lv_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
